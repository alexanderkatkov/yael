
# Root editor config.
root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = crlf
charset = utf-8

[**.php]
indent_style = tab
indent_size = 4
end_of_line = crlf
charset = utf-8

[**.{css,less,scss}]
indent_style = space
indent_size = 2
end_of_line = crlf
charset = utf-8

[**.js]
indent_style = tab
indent_size = 4
end_of_line = crlf
charset = utf-8

[**.{.json,.yml}]
indent_style = space
indent_size = 2
end_of_line = crlf
charset = utf-8
